@page "/"

<!-- Menu -->
<h1>Haz tu selecci&oacute;n</h1>
@foreach (var pizza in Estado.Menu.Pizzas)
{
    <div class="row">
        <div class="col">
            @pizza.Nombre
        </div>

        <div class="col text-right">
            @($"{pizza.Precio:0.00}")
        </div>

        <div class="col"></div>

        <div class="col">
            <img src="@EspeciasImagenes(pizza.Especias)" alt="@pizza.Especias" />
        </div>

        <div class="col">
            <button class="btn btn-success pl-4 pr-4" @onclick="@(() => AgregaraCanasta(pizza))">
                Add
            </button>
        </div>
    </div>
}

<!-- End menu -->
<!-- Shopping Basket -->
@if (Estado.Canasta.Pedidos.Any())
{
    <h1 class="">Tu orden actual</h1>
    @foreach (var (pizza, pos) in Estado.Canasta.Pedidos.Select(
   (id, pos) => (Estado.Menu.GetPizza(id), pos)))
    {
        <div class="row mb-2">
            <div class="col">
                @pizza.Nombre
            </div>
            <div class="col text-right">
                @($"{pizza.Precio:0.00}")
            </div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col">
                <button class="btn btn-danger" @onclick="@(() => RemoverCanasta(pos))">
                    Remove
                </button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <hr />
        </div>
        <div class="col"> </div>
        <div class="col"> </div>
    </div>
    <div class="row">
        <div class="col"> total:</div>
        <div class="col text-right font-weight-bold">
            @($"{Estado.PrecioTotal:0.00}")
        </div>
        <div class="col"> </div>
        <div class="col"> </div>
        <div class="col"> </div>
    </div>

}
<!-- End shopping basket -->
<!-- Customer entry -->



<h1>Por favor ingresa tus datos</h1>

<EditForm Model="@Estado.Canasta.Clientes" OnValidSubmit="PlaceOrder">
    <DataAnnotationsValidator />
    <fieldset>
        <div class="row mb-2">
            <label class="col-2" for="name">Nombre:</label>
            <input class="col-6" id="name" @bind="Estado.Canasta.Clientes.Nombre" />
            <div class="validation-message">Por favor proporcionar un Nombre</div>
        </div>
        <div class="row mb-2">
            <label class="col-2" for="street">Calle:</label>
            <input class="col-6" id="street" @bind="Estado.Canasta.Clientes.Calle" />
            <div class="validation-message">Por favor ingrese la calle</div>

        </div>
        <div class="row mb-2">
            <label class="col-2" for="city">Ciudad:</label>
            <input class="col-6" id="city" @bind="Estado.Canasta.Clientes.Ciudad" />
            <div class="validation-message">Por favor Ingrese la ciudad</div>

            
        </div>
            <button class="mx-auto w-25 btn btn-success" @onclick="PlaceOrder">Verificar</button>
    </fieldset>
</EditForm>
<!-- End customer entry -->


@code {
    private Estado Estado { get; } = new Estado();

    protected override void OnInitialized()
    {
        Estado.Menu.Add(
        new Pizza(1, "Pepperoni", 8.99M, Especias.Condimentado));
        Estado.Menu.Add(
        new Pizza(2, "Margarita", 7.99M, Especias.Ninguna));
        Estado.Menu.Add(
        new Pizza(3, "Diabolo", 9.99M, Especias.Picante));
    }

    private string EspeciasImagenes(Especias especias)
    => $"imagenes/{especias.ToString().ToLower()}.png";

    private void AgregaraCanasta(Pizza pizza)
    => Estado.Canasta.Add(pizza.Id);

    private void RemoverCanasta(int pos)
    => Estado.Canasta.RemoveAt(pos);

    private void PlaceOrder()
    {
        Console.WriteLine("Placing order");
    }
}